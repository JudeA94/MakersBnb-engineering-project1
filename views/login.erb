<html>
  <head>
    <link rel="stylesheet" type="text/css" href="styles-login.css">
  </head>
  <body>
    <header>
      <h1>Welcome to Makers BnB</h1>
      <h3>Please Log In or Sign Up</h3>
      <div class="login-signup">
        <form action="/" method="post">
          <label for="email_address">Email Address:</label>
          <input type="email" placeholder="Enter Email" name="email_address" id="Email" required>
          <br>
          <label for="password">Password:</label>
          <input type="password" placeholder="Enter Password" name="password" id="Pass" required>
          <div> <%= @message unless @message.nil? %> </div>
          <div class="btn-container">
            <button type="submit" class="btn">Login</button>
            <a href="/signup">
              <button type="button" id="btn2">Sign Up</button>
            </a>
          </div>
        </form>
      </div>
    </body>
  </html>